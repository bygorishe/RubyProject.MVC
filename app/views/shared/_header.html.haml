= stylesheet_link_tag 'header.css'

%p.locale
.header
  = image_tag("Alliance.png", :alt => "Логотип", style: 'height:10%;width:10%;')
  .ru_link
  = link_to image_tag("ru.png", alt: "", title: "Русский" ), locale: :ru
  = link_to image_tag("en.png", alt: "", title: "English"), locale: :en
  %b
    = I18n.locale


-#
  %nav
    %ul.nav.navbar-nav.pull-right
      %li= link_to t('.home'), root_path
      %li= link_to t('.help'), help_path
      - if signed_in?
        #%li= link_to "Users", '#'
        %li.logged
          #{current_user.email}
        = gravatar_for current_user
        %li    #fat-menu.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown",
   :href => "#"}
            %p
              = t('.person')
              %b.caret
          %ul.dropdown-menu
            %li= link_to t('.profile'), current_user
            %li= link_to t('.settings'), '#'
            %li.divider
            %li
              = link_to t('.sign_out'), signout_path, method: "delete"
      - else
        %li= link_to t('.sign_in'), signin_path
