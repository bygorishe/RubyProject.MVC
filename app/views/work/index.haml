.image
  .row
    .col-md-3

.left_controls
  .select_theme
  = render 'work/button_theme_select' #, locale: @current_locale

%br

.col-md-9
  .image_display
    .row.image
      .col-md-12
        %h1.up-theme{:title => 'theme_name'}
          #{@selected_theme}

      .col-md-12
        %h2.up{:title => "Image file name"}
          #{@selected_image_name}

      .col-md-1
        .img-left-side
          %h3{:title => "list to previous image"}
            %p "left"
      .col-md-10
        .img-center{:title => "Default image"}
    %img{:alt => "Default Image", :src => 'assets/pictures/Earth.png',
         :title => "Default image",
         :style => "width:30%; height:30%;" }
      .image_user_value{:title => "Expert value"}
      .col-md-1
        .img-right-side
          %h3{:title => "list to next image"}
            %p "right"
